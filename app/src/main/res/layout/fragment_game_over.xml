<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_over_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GameOverFragment" >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/game_over_constraint_width"
            android:layout_height="@dimen/game_over_constraint_height"
            android:background="@drawable/game_over_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/game_over_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_over_score"
                android:textSize="@dimen/game_over_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/game_over_pic" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/game_over_edit_name"
                android:layout_height="wrap_content"
                android:hint="@string/game_over_hint"
                app:layout_constraintBottom_toTopOf="@+id/button_main_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/game_over_score">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_if_highscore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/game_over_text_size" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/game_over_pic"
                android:layout_width="@dimen/game_over_width"
                android:layout_height="@dimen/game_over_height"
                android:layout_marginTop="@dimen/game_over_margin_top"
                android:src="@drawable/gameover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/button_main_menu"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/game_over_image_view_width"
                android:layout_height="@dimen/game_over_image_view_height"
                android:layout_margin="@dimen/game_over_image_view_margin"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/button_restart"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/game_over_image_view_width"
                android:layout_height="@dimen/game_over_image_view_height"
                android:layout_margin="@dimen/game_over_image_view_margin"
                android:src="@drawable/ic_baseline_restart_alt_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>